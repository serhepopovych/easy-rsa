#!/bin/sh -e

# Requires: rm(1), ln(1)

## Make xbin symlink

f="$TARGET/easy-rsa/extensions/xbin"
if [ -L "$f" ]; then
    rm -f "$f" ||:
    ln -sf . "$f"
fi

## Adjust filesystem ownership and permissions

# $ROOT/etc/cron.d/update-crl.crontab
adj_rights '' 0644 "$ROOT/etc/cron.d/update-crl.crontab"
# $ROOT/etc/cron.d/update-index-txt.crontab
adj_rights '' 0644 "$ROOT/etc/cron.d/update-index-txt.crontab"

# $ROOT/etc/logrotate.d/lighttpd-@fqdn@
f="$ROOT/etc/logrotate.d/lighttpd-$fqdn"
if [ -f "$f" ]; then
    adj_rights '' 0644 "$f"
fi

## Cleanup namespace

unset f

return 0
